<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h1>I Order a Tour Guide</h1> 
      <table class="table" id="admin_users_table">
        <tr>
          <td>Group_id</td>
          <td>id</td>
          <td>Tour Guide</td>
          <td>start date</td>
          <td>place</td>
          <td>People Count</td>
          <td>Request Days</td>
          <td>Purpose</td> 
          <td>status</td>
          <td>finished</td>
          <td>Edit</td>
        </tr>
        <% @orders.each do |order|%>
          <tr>
            <td><%= order.group_id %></td>
            <td><%= link_to order.id, user_order_path(current_user, order.id, :role => "traveler") %></td>
            <td>
              <%= User.find(order.tour_guide_id).name%>
            </td>
            <td><%= order.user_prefer_date%></td>
            <td><%= order.user_prefer_place%></td>
            <td><%= order.people_count%></td>
            <td><%= order.request_days%></td>
            <td><%= order.purpose%></td>
            <td><%= order.status%></td>
            <td><%= order.finished%></td>
            <td><%= link_to "Edit", edit_user_order_path(current_user,order), :class => "btn btn-success btn-sm"%></td>
          </tr>
        <%end%>
      </table> 
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <h1>I am a Tour Guide, these are my orders</h1> 
      <table class="table" id="admin_users_table">
        <tr>
          <td>Group_id</td>
          <td>order_id</td>
          <td>Traveller</td>
          <td>Email</td>
          <td>phone_number</td>
          <td>prefer date</td>
          <td>prefer place</td>
          <td>People Count</td>
          <td>Request Days</td>
          <td>Purpose</td>
          <td>others</td> 
          <td>status</td>
          <td>finished</td>
        </tr>
        <% @customer_orders.each do |order|%>
          <tr>
            <td><%= order.group_id %></td>
            <td><%= link_to order.id, user_order_path(current_user,order, :role=>"tour-guide")%></td>
            <td><%= order.name%></td>
            <td><%= order.email%></td>
            <td><%= order.phone_number%></td>
            <td><%= order.user_prefer_date%></td>
            <td><%= order.user_prefer_place%></td>
            <td><%= order.people_count%></td>
            <td><%= order.request_days%></td>
            <td><%= order.purpose%></td>
            <td><%= order.others%></td>
            <td><%= order.status%></td>
            <td><%= order.finished%></td>
          </tr>
        <%end%>
      </table> 
    </div>
  </div>
</div>
