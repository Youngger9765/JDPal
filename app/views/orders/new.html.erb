<h3>Hello <%= @user.nick_name or @user.name%>,</h3>
<h4>Would you like to make a reservation?</h4>

<%= form_for @order, :url => user_orders_path do |f| %>

  <%= render :partial => 'form', :locals => { :f => f} %>

<% end %>

<script type="text/javascript">
  $("#tour-guide-checklist label").after("<br>");

  if (<%= @checked_tour_guide_id %>) {
    var input_id = "#order_tour_guide_ids_" + <%= @checked_tour_guide_id%>;
    $(input_id).attr("checked","");
  };
</script>